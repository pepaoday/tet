@model DoAnPhanMem.Models.NHANVIEN

@{
    ViewBag.Title = "Chỉnh Sửa Nhân Viên";
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<h2>Chỉnh Sửa Nhân Viên</h2>
<style>
    .form-control {
        border: 1px solid !important;
    }

    .form-horizontal {
        padding: 20px;
        border: 1px dashed;
        border-radius: 10px;
    }

    .btn-default {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-default:hover {
            background-color: #0056b3;
            color: white;
        }

    .text-danger { 
        color: #dc3545;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
          @Html.HiddenFor(model => model.IDNHANVIEN) <!-- Hidden field for ID -->

        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.TENNV, "Tên Nhân Viên", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.TENNV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENNV, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.GIOITINH, "Giới Tính", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.GIOITINH, new List<SelectListItem>
                {
                    new SelectListItem { Text = "Nam", Value = "false" },
                    new SelectListItem { Text = "Nữ", Value = "true" }
                }, "Chọn giới tính", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GIOITINH, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.DIACHI, "Địa Chỉ", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.TONGDANHGIA, "Tổng Đánh Giá", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.TONGDANHGIA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TONGDANHGIA, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.NGAYSINH, "Ngày Sinh", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.NGAYSINH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NGAYSINH, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.SODT, "Số Điện Thoại", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.SODT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SODT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.CHUCVU, "Chức Vụ", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.CHUCVU, new List<SelectListItem>
                {
                    new SelectListItem { Text = "Nhân viên", Value = "Nhân viên" },
                    new SelectListItem { Text = "Quản lý", Value = "Quản lý" }
                }, "Chọn chức vụ", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CHUCVU, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.TAIKHOAN.TENTK, "Tài Khoản", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("TENTK", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TAIKHOAN.TENTK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 text-left">
                <input type="submit" value="Cập Nhật" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
